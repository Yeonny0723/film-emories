include mixins/message

doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(name="description" content="Online photo booth")
        meta(name="Online photo booth" content="photobooth,photo,film,filmcamera,memory")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{siteName} | #{pageTitle}
        link(rel="icon" type="image/x-icon" href="/img/logo.png")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
        link(rel="stylesheet" href="/static/css/styles.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@700&family=Noto+Sans+KR:wght@400;500&display=swap" rel="stylesheet")
    body
        include partials/header
        if messages.error
            +message("error", messages.error)
        if messages.info
            +message("info", messages.info)
        if messages.success
            +message("success", messages.success)
        main
            div(style="width:100%; display:flex; justify-content:flex-end;").goBack
                a(onClick="history.back()")
                    i.fa.fa-chevron-left &nbsp;
                    span(style="font-weight:600") Go back
            block content
        include partials/footer
    script(src="/static/js/shared.js") 
    script(src="/static/js/main.js") 
    block scripts